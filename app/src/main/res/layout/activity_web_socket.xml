<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebSocketActivity">
    <TextView
        app:layout_constraintTop_toTopOf="@id/switch_ip_url"
        app:layout_constraintBottom_toBottomOf="@id/switch_ip_url"
        app:layout_constraintEnd_toStartOf="@id/switch_ip_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/switch_ip_url"
        app:layout_constraintBottom_toBottomOf="@id/switch_ip_url"
        app:layout_constraintStart_toEndOf="@id/switch_ip_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL"/>
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_ip_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_ip"
        android:hint="IP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_ip_url"
        app:layout_constraintWidth_percent="0.65"/>
    <EditText
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_port"
        android:hint="PORT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_ip"
        app:layout_constraintWidth_percent="0.3"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_ip">
        <Button
            android:id="@+id/bt_connect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"/>
        <Button
            android:visibility="gone"
            android:id="@+id/bt_disconnect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DisConnect"/>
        <ImageView
            android:id="@+id/iv_connection_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_cancel_24"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl2">
        <EditText
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_msg"
            android:hint="Message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.65"/>
        <Button
            android:visibility="visible"
            android:id="@+id/bt_send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.3"
            android:layout_height="wrap_content"
            android:text="Send"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl3"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/et_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=" Logs: \n "
            android:background="@color/white"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />
    </ScrollView>
        

</androidx.constraintlayout.widget.ConstraintLayout>